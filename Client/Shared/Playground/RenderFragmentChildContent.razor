
<p  >
    <div>
        Content of the component...
    </div>
    <div>
        Child content: <br/>
        <div style="margin: 5px 0 0 30px; padding: 5px; border: 3px solid; border-radius: 10px; background-color: #6f42c188">

        @if (ChildContent == null)
        {
            <text>The child content is NULL!</text>
        }
        else
        {
            @ChildContent
        }
        </div>
    </div>
</p>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
